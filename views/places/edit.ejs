<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Edit <%= place.name %></h2>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/nyc_places/<%= place._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                 <input class="form-control" type="text" name="place[name]" value="<%= place.name %>">
                </div>
                <div class="form-group">
                   <input class="form-control" type="number" name="place[price]" value="<%= place.price %>" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                   <input class="form-control" type="text" name="place[image]" value="<%= place.image %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="place[description]" value="<%= place.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/nyc_places">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>