<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>NYC Places to Visit</h1>
            <p>Come visit this exciting city</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/nyc_places/new">Add New Tourist Attraction</a>
            </p>
        </div>
    </header>
 
 <div class="row">
     <div class="col-lg-12">
         <h3>Top NYC Destinations!</h3>
     </div>
 </div>
 
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% places.forEach(function(place){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= place.image %>">
                <div class="caption">
                    <h4><%= place.name %></h4>
                </div>   
                <p>
                    <a href="/nyc_places/<%= place._id %>" class="btn btn-primnary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
    </div>
    
    <a href="/">Home</a>
</div>

<% include ../partials/footer %>